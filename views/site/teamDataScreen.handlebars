<div class="barColor"
    style="background-color: rgb(14, 46, 60); width: 100%; text-align:end; color:white; padding-top:0.5em; padding-right:0.7em; opacity:0.8">
</div>
</div>
</div>
<div class="locations">
    <ul class="locationsList">
        <li><a href="/ayarlar/team"> Ayarlar > Takım </a></li>
        <li><i class="fa-solid fa-circle-question"></i></li>
    </ul>
</div>
</nav>
<div class="mainPage">
    {{>left-navData}}
    <div class="hakemSettings" style="width: 450px;">
        <div class="boxSettings">
            <div class="boxSettingsTop" style="margin-left: 2em;">
                <h2>Takım Ayarları</h2>
                <p>Takım ile ilgili bilgileri aşağıdan değiştirebilirsiniz.</p>
            </div>
            <div class="hr"></div>
            <div class="boxSettingsMiddle" style="margin-left: 2em;">
                <form action="/ayarlar/team/takim" method="POST" class="boxInfo">
                    <h2>Takım Bilgileri</h2>
                    <div class="topInfo">
                        <div class="input-container">
                            <input type="text" style="width: 150px;" name="teamName" required=""
                                value="{{team.teamName}}" />
                            <label>Takım İsmi</label>
                        </div>
                        <select class="w3-select" id="refereeSelect" required name="leagueName"
                            style="width: 150px; margin:1em;">
                            <option value="" disabled selected>Lig Seçiniz</option>
                            {{#each league}}
                            <option value="{{_id}}">{{leagueName}}</option>
                            {{/each}}
                        </select>
                    </div>
            </div>
            <div class="hr" style="margin-top:1em;"></div>
            <div class="optionButtons" style="margin: 1em 2em; display:flex; gap: 3em;">
                <button type="submit" class="greenButton">Kaydet</button>
                <button type="reset" onclick="window.location.href='/ayarlar/team'" class="cancelButton">Geri</button>
            </div>

            <div class="hr"></div>
            </form>

            <div class="dangerArea" style="margin: 1em 2em;">
                <h2>Tehlikeli Bölge <span style="color: red;">!</span></h2>
                <form action="/ayarlar/team/{{team._id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="redButton">Sil</button>
                </form>
            </div>

        </div>

    </div>

    {{>sessionFlashMessage}}

</div>